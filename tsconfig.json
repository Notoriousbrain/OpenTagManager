{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@otm/trpc/*": ["packages/trpc/src/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "jsx": "preserve"
    },
  "exclude": ["node_modules"],
  "include": ["packages", "apps"]
}
