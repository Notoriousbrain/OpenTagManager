{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "composite": true,
    "paths": {
      "api": ["./packages/api/src"]
    }
    },
  "exclude": ["node_modules"],
  "include": ["packages", "apps"]
}
